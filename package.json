{
    "name": "Todo_AndCo",
    "version": "0.0.2",
    "description": "refacto TodoApp",
    "repository": "https://github.com/MyrrdinAlsatian/BasicStarter.git",
    "author": "Myrrdin <stephan.jeanba@gmail.com>",
    "license": "MIT",
    "scripts": {
        "prepare": "husky install && npm install --global commitizen"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@commitlint/cz-commitlint": "^17.0.3",
        "commitizen": "^4.2.4",
        "commitlint-config-cz": "^0.13.3",
        "cz-conventional-changelog": "^3.3.0",
        "cz-customizable": "^6.7.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3"
    },
    "engines": {
        "yarn": "^1.22.0",
        "npm": "please-use-yarn"
    },
    "lint-staged": {
        "*.{js,ts,tsx,jsx}": [
            ""
        ],
        "*.{html,js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": " npx cz --hook || true",
            "pre-commit": "lint-staged && npx --no-install git-precommit-checks",
            "commit-msg": "npx --no-install commitlint --edit $1"
        }
    },
    "git-precommit-checks": {
        "display": {
            "notifications": true,
            "offendingContent": true,
            "rulesSummary": true,
            "shortStats": true,
            "verbose": true
        },
        "rules": [
            {
                "filter": "\\.js$",
                "message": "'ðŸ¤” Hum ! Nâ€™as-tu pas oubliÃ© de retirer un console.log(â€¦) ?'",
                "regex": "console\\.log"
            },
            {
                "message": "Il reste des marqueurs de conflict",
                "regex": "/^[<>|=]{4,}/m"
            },
            {
                "filter": "^package\\.json$",
                "message": "Il te reste des choses Ã  faire (FIXME|TODO)",
                "regex": "(?:FIXME|TODO)"
            },
            {
                "message": "Bah alors ont fait des 'if (true)' ?",
                "regex": "/if\\s+\\(?(?:.*\\|\\|\\s*)?true\\)?/"
            }
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": ".cz-config.js"
        }
    },
    "dependencies": {}
}
